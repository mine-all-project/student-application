                goods_ids,
            </if>
            <if test="paperIds != null">
                paper_ids,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=VARCHAR},
            </if>
            <if test="userId != null">
                #{userId,jdbcType=VARCHAR},
            </if>
            <if test="goodsIds != null">
                #{goodsIds,jdbcType=VARCHAR},
            </if>
            <if test="paperIds != null">
                #{paperIds,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective">
        update favorite
        <set>
            <if test="goodsIds != null">
                goods_ids = #{goodsIds,jdbcType=VARCHAR},
            </if>
            <if test="paperIds != null">
                paper_ids = #{paperIds,jdbcType=TIMESTAMP},
            </if>
