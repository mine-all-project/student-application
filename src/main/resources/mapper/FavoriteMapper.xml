        <result column="paper_ids" jdbcType="VARCHAR" property="paperIds"/>
    </resultMap>
    <insert id="insert" parameterType="org.example.application.custom.entity.Favorite">
        insert into favorite (id, user_id, goods_ids,
                              paper_ids)
        values (#{id,jdbcType=VARCHAR}, #{userId,jdbcType=VARCHAR}, #{goodsIds,jdbcType=VARCHAR},
                #{paperIds,jdbcType=VARCHAR})
    </insert>
    <insert id="insertSelective" parameterType="org.example.application.custom.entity.Favorite">
        insert into favorite
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
