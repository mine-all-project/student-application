<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="org.example.waimai.mapping.SysAddressMapping">

    <select id="findAllProvinces" resultType="Map">
 		select * from provinces
 	</select>

    <select id="findCitiesByProvincesId" resultType="Map">
 		select * from cities where provinceid = #{pid}
 	</select>

    <select id="findAreasByProvincesId" resultType="Map">
 		select * from areas where cityid = #{pid}
 	</select>
</mapper>
